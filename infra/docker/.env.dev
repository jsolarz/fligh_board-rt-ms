# FlightBoard Development Environment
# Fast development with hot reload and debug features

# Database Configuration
DB_CONNECTION_STRING=Data Source=/app/data/flightboard.db
DB_VOLUME_PATH=../../Data

# JWT Configuration (Development - Less Secure)
JWT_SECRET=DevelopmentJwtSecretKey2024ForLocalOnly
JWT_ISSUER=FlightBoard.Api
JWT_AUDIENCE=FlightBoard.Frontend
JWT_ACCESS_EXPIRY=60
JWT_REFRESH_EXPIRY=30

# Public URLs (Development)
API_PUBLIC_URL=http://localhost:5183
SIGNALR_PUBLIC_URL=http://localhost:5183/flighthub

# Logging Level (Verbose for debugging)
LOG_LEVEL=Debug

# Development Features
ASPNETCORE_ENVIRONMENT=Development
CORS_ALLOW_ANY_ORIGIN=true
ENABLE_SWAGGER=true
ENABLE_HOT_RELOAD=true

# Frontend Development
REACT_APP_API_URL=http://localhost:5183
REACT_APP_SIGNALR_URL=http://localhost:5183/flighthub
REACT_APP_ENVIRONMENT=development
